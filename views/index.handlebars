<div class="jumbotron">
    <h1 class="display-4">Eat-Da-Burger!</h1>
    <p class="lead">Where Burgers are not Eaten but Devoured!</p>
  <hr class="my-4">
</div>

  <div class="row">
	    <div class="col-sm-6">

			<br>
			<h2>Available Burgers!</h2>

			<ul>
			  {{#each burgers}}
			    {{#unless this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			        <form action="burgers/updateOne/{{this.id}}?_method=PUT" method="POST">
			          <input type="hidden" name="devoured" value="true">
			          <button class="btn-primary" type="submit">Devour It!</button>
			        </form>

			      </li>
			    {{/unless}}
			  {{/each}}
			</ul>

	    </div>

	    <div class="col-sm-6">

			<h2>Burgers That Have Been Devoured!</h2>
			
			  {{#each burgers}}
			    {{#if this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			      </li>
			    {{/if}}
			  {{/each}}
			
	    </div>

  	</div>
	<!-- end .row -->

	<div class="row">
	    <div class="center col-sm-12">

			<h2>Add Da Burger!</h2>

			<form class="create-update-form" action="/burgers" method="POST">

			  <div class="form-group">
			    <p>Enter a burger you want to order and click Submit.</p>
			    <input type="text" id="ca" name="burger_name">
			  </div>
			  
			  <button class="btn-primary" type="submit">Submit Order</button>
			</form>

	    </div>
	
  	</div>
	<!-- end .row -->

</div>